# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# CSS-Files
[*.css]
indent_style = space
indent_size = 2

# HTML-Files
[*.html]
indent_style = space
indent_size = 4

# TMPL-Files
[{*.tmpl, *.twig, *.njk}]
indent_style = space
indent_size = 4

# SCSS-Files
[*.scss]
indent_style = space
indent_size = 2

# JS-Files
[{*.js,*.jsx}]
indent_style = space
indent_size = 2

# JSON-Files
[*.json]
indent_style = space
indent_size = 4

# PHP-Files
[*.php]
indent_style = space
indent_size = 4

# ReST-Files
[*.rst]
indent_style = space
indent_size = 4

# MD-Files
[*.md]
indent_style = space
indent_size = 4

# YAML-Files
[{*.yaml,*.yml}]
indent_style = space
indent_size = 4

# package.json
[package.json]
indent_size = 2

# TypeScript
[{*.ts, *.tsx}]
indent_style = space
indent_size = 2

# XLF-Files
[*.xlf]
indent_style = space
indent_size = 4

# SQL-Files
[*.sql]
indent_style = space
indent_size = 2
